{% extends 'layout.html.twig' %}


{% block content %}
	<h1>Balance ton Santa</h1>
	<div>
		<h2>Ajouter votre SDM</h2>
		<form action="" method="POST">
			<div>
				<label for="pseudo">Pseudo :
				</label>
				<input type="text" name="pseudo" id="pseudo" value="Pseudo" required="required">
			</div>
			<div>
				<label for="titre">
					Titre :
				</label>
				<input type="text" name="titre" id="titre" value="Titre" required="required">
			</div>
			<div>
				<label for="msg">Message :</label>
				<textarea name="msg" id="msg" cols="30" rows="10" maxlength="500" required="required"></textarea>*
			</div>
			<div>
				<label for="img">Choisir un fichier:</label>
				<input type="file" id="img" name="img" accept="image/png, image/jpeg, "/>
			</div>
            <div>
            <input type="submit" value="Envoyer">
            </div>
		</div>
	</form>
</div>
{% endblock %}
